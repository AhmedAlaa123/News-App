<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:background="#46CCCCD6"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_view_article_title"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Article Title"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/arima_madurai"
        android:textColor="#000"/>
    <ImageView
        android:id="@+id/image_view_article_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_view_article_title"
        android:src="@drawable/android_logo"/>
    <TextView
        android:id="@+id/text_view_article_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"
        android:layout_below="@id/image_view_article_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Article Description"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/text_view_show_article_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:fontFamily="@font/arima_madurai"
        android:layout_below="@id/text_view_article_description"
        android:layout_alignParentStart="true"

        android:text="Show Article Page"
        android:textColor="#f00"
        android:layout_margin="10dp"
        android:background="@drawable/click_hover"/>



</RelativeLayout>

</androidx.cardview.widget.CardView>