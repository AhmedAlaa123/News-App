<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Acivities.MainActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/btn_TopHeadlines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/click_hover"
        android:fontFamily="@font/arima_madurai"
        android:text="Top Headlines"
        android:textColor="#00f"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/btn_HeadinesFromTechCrunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/click_hover"
        android:fontFamily="@font/arima_madurai"
        android:text="Headlines From TechCrunch"
        android:textColor="#f00"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/btn_WallStreetPublishedArticles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/click_hover"
        android:fontFamily="@font/arima_madurai"
        android:text="Wall Street Published Articles"
        android:textColor="#0f0"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/btn_AllArticlesAboutBitconFromLastMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/click_hover"
        android:fontFamily="@font/arima_madurai"
        android:text="All Articles About Bitcon From Last Month"
        android:textColor="#FF6D00"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/btn_AllArticalsFromQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/click_hover"
        android:fontFamily="@font/arima_madurai"
        android:text="All Articals "
        android:textColor="#08351B"
        android:textSize="30sp" />



</LinearLayout>
    </ScrollView>
</LinearLayout>